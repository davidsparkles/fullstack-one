{
  "name": "@fullstack-one/auth",
  "version": "0.5.4",
  "description": "fullstack.one auth package",
  "main": "index.js",
  "types": "lib/index.ts",
  "scripts": {
    "test": "ava --verbose ./test/**/*test.ts",
    "coverage": "nyc --reporter=html --reporter=text ava --verbose ./test/**/*test.ts",
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fullstack-build/fullstack.one.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "@fullstack-one/boot-loader": "^0.5.4",
    "@fullstack-one/config": "^0.5.4",
    "@fullstack-one/db": "^0.5.4",
    "@fullstack-one/di": "^0.5.2",
    "@fullstack-one/graphql": "^0.5.4",
    "@fullstack-one/logger": "^0.5.4",
    "@fullstack-one/schema-builder": "^0.5.4",
    "@fullstack-one/server": "^0.5.4",
    "@koa/cors": "^2.2.1",
    "jsonwebtoken": "^8.2.1",
    "koa-bodyparser": "^4.2.0",
    "koa-passport": "^4.0.1",
    "koa-router": "^7.3.0",
    "koa-session": "^5.7.1",
    "passport-local": "^1.0.0",
    "sodium-native": "^2.1.5"
  },
  "devDependencies": {
    "ava": "^1.1.0",
    "nyc": "^13.1.0",
    "source-map-support": "^0.5.10"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
