{
  "name": "@fullstack-one/graphql",
  "version": "0.5.1",
  "description": "fullstack.one GraphQL package",
  "main": "index.js",
  "types": "lib/index.ts",
  "scripts": {
    "test": "ava --verbose ./test/**/*test.ts",
    "coverage": "nyc --reporter=html --reporter=text ava --verbose ./test/**/*test.ts",
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fullstack-build/fullstack.one.git"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "@fullstack-one/boot-loader": "^0.5.1",
    "@fullstack-one/config": "^0.5.1",
    "@fullstack-one/db": "^0.5.1",
    "@fullstack-one/di": "^0.5.1",
    "@fullstack-one/helper": "^0.5.1",
    "@fullstack-one/logger": "^0.5.1",
    "@fullstack-one/schema-builder": "^0.5.1",
    "@fullstack-one/server": "^0.5.1",
    "apollo-cache-inmemory": "^1.2.9",
    "apollo-client": "^2.4.1",
    "apollo-link-schema": "^1.1.0",
    "apollo-server-koa": "^1.3.6",
    "graphql": "^0.13.2",
    "graphql-parse-resolve-info": "0.1.0-alpha.18",
    "graphql-tools": "^3.0.0",
    "graphql-type-json": "^0.1.4",
    "koa": "2.5.2",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.10"
  },
  "devDependencies": {
    "@types/graphql": "^0.13.1",
    "ava": "^1.1.0",
    "nyc": "^13.1.0",
    "source-map-support": "^0.5.10"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
