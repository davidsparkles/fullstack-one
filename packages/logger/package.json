{
  "name": "@fullstack-one/logger",
  "version": "0.5.18",
  "description": "fullstack.one logger package",
  "main": "index.js",
  "types": "lib/index.ts",
  "scripts": {
    "test": "echo \"No tests specified.\" && exit 0",
    "coverage": "nyc --reporter=html --reporter=text ava --verbose ./test/**/*test.ts",
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fullstack-build/fullstack.one.git"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "@fullstack-one/config": "^0.5.18",
    "@fullstack-one/di": "^0.5.15",
    "debug-logger": "^0.4.1",
    "tracer": "^0.9.8"
  },
  "devDependencies": {
    "ava": "^1.1.0",
    "nyc": "^13.1.0",
    "source-map-support": "^0.5.10"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
