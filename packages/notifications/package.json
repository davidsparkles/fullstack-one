{
  "name": "@fullstack-one/notifications",
  "version": "0.5.8",
  "description": "fullstack.one notifications package",
  "main": "index.js",
  "types": "lib/index.ts",
  "scripts": {
    "test": "ava --verbose ./test/**/*test.ts",
    "coverage": "nyc --reporter=html --reporter=text ava --verbose ./test/**/*test.ts",
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fullstack-build/fullstack.one.git"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "@fullstack-one/boot-loader": "^0.5.5",
    "@fullstack-one/config": "^0.5.5",
    "@fullstack-one/di": "^0.5.2",
    "@fullstack-one/events": "^0.5.8",
    "@fullstack-one/logger": "^0.5.5",
    "@fullstack-one/queue": "^0.5.8",
    "@fullstack-one/schema-builder": "^0.5.8",
    "mailgen": "^2.0.5",
    "nodemailer": "^4.6.8",
    "nodemailer-direct-transport": "^3.3.2",
    "nodemailer-html-to-text": "^2.1.0"
  },
  "devDependencies": {
    "@types/mailgen": "^2.0.1",
    "@types/nodemailer": "^4.3.2",
    "ava": "^1.1.0",
    "nyc": "^13.1.0",
    "source-map-support": "^0.5.10"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
